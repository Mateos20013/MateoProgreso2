<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MateoProgreso2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MateoProgreso2"
    Shell.FlyoutBehavior="Flyout"
    Title="MateoProgreso2">

    <TabBar>
        <Tab Title="Recarga">
            <ShellContent
            Title="Recarga"
            ContentTemplate="{DataTemplate local:MRecarga}"
            Route="MRecarga"/>
        </Tab>
        <Tab Title="Grid">
            <ShellContent
             Title="Grid"
             ContentTemplate="{DataTemplate local:Grid}"
             Route="Grid"/>
        </Tab>

    </TabBar>

</Shell>
